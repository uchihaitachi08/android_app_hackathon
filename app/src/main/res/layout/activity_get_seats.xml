<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/savex">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Train No."
        android:textSize="25sp"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="60dp"
        android:id="@+id/tvTrn"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        android:textSize="25sp"
        android:id="@+id/setT"
        android:layout_alignTop="@+id/tvTrn"
        android:layout_alignParentRight="true" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available Seats"
        android:textSize="25sp"
        android:id="@+id/tvAs"
        android:layout_marginBottom="60dp"
        android:layout_below="@+id/tvTrn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setAS"
        android:textSize="25sp"
        android:ems="5"
        android:layout_alignTop="@+id/tvAs"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/editText" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Limit"
        android:textSize="25sp"
        android:layout_marginBottom="20dp"
        android:id="@+id/tvSl"
        android:layout_below="@+id/tvAs"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setSL"
        android:ems="5"
        android:inputType="number"
        android:textSize="25sp"
        android:layout_alignBottom="@+id/tvSl"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/saveB"
        android:textSize="25sp"
        android:layout_marginBottom="98dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etTT"
        android:layout_below="@+id/tvSl"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/setSL"
        android:layout_alignEnd="@+id/setSL" />

</RelativeLayout>